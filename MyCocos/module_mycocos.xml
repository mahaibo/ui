<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mycocos" default="compile.module.mycocos">
  <dirname property="module.mycocos.basedir" file="${ant.file.module_mycocos}"/>
  
  <property name="module.jdk.home.mycocos" value=""/>
  <property name="module.jdk.bin.mycocos" value=""/>
  <property name="module.jdk.classpath.mycocos" value=""/>
  
  <property name="compiler.args.mycocos" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="mycocos.output.dir" value="${module.mycocos.basedir}/out/production/MyCocos"/>
  <property name="mycocos.testoutput.dir" value="${module.mycocos.basedir}/out/test/MyCocos"/>
  
  <path id="mycocos.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mycocos.module.production.classpath"/>
  
  <path id="mycocos.runtime.production.module.classpath">
    <pathelement location="${mycocos.output.dir}"/>
  </path>
  
  <path id="mycocos.module.classpath">
    <pathelement location="${mycocos.output.dir}"/>
  </path>
  
  <path id="mycocos.runtime.module.classpath">
    <pathelement location="${mycocos.testoutput.dir}"/>
    <pathelement location="${mycocos.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mycocos">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mycocos">
    <patternset refid="excluded.from.module.mycocos"/>
  </patternset>
  
  <path id="mycocos.module.sourcepath">
    <dirset dir="${module.mycocos.basedir}/../../ui">
      <include name="MyCocos"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mycocos" depends="compile.module.mycocos.production,compile.module.mycocos.tests" description="Compile module MyCocos"/>
  
  <target name="compile.module.mycocos.production" depends="register.custom.compilers" description="Compile module MyCocos; production classes">
    <mkdir dir="${mycocos.output.dir}"/>
    <javac2 destdir="${mycocos.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mycocos}/javac">
      <compilerarg line="${compiler.args.mycocos}"/>
      <bootclasspath refid="mycocos.module.bootclasspath"/>
      <classpath refid="mycocos.module.production.classpath"/>
      <src refid="mycocos.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mycocos"/>
    </javac2>
    
    <copy todir="${mycocos.output.dir}">
      <fileset dir="${module.mycocos.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mycocos.tests" depends="register.custom.compilers,compile.module.mycocos.production" description="compile module MyCocos; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mycocos" description="cleanup module">
    <delete dir="${mycocos.output.dir}"/>
    <delete dir="${mycocos.testoutput.dir}"/>
  </target>
</project>